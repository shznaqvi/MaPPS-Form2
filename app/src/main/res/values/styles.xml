<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/lblTextView</item>
        <item name="android:editTextStyle">@style/txtEditText</item>
        <item name="android:checkboxStyle">@style/chkBox</item>
        <item name="android:typeface">serif</item>
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>

    </style>


    <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:scrollViewStyle">@style/BackgroundStyle</item>
        <item name="android:textViewStyle">@style/lblTextView</item>
        <item name="android:editTextStyle">@style/textInput</item>
        <item name="android:checkboxStyle">@style/checkbox</item>
        <item name="android:radioButtonStyle">@style/radiobutton</item>
        <item name="spinnerStyle">@style/spinner</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="radiogroup">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:padding">8dp</item>

    </style>

    <style name="button" parent="android:Widget.ActionButton">

    </style>

    <style name="lblTextView" parent="android:Widget.Material.Light.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textSize">32sp</item> <!--or 16sp-->
        <item name="android:elevation">1dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:layout_gravity">center_vertical</item>


    </style>


    <!--EDITTEXT-->
    <style name="txtEditText" parent="android:Widget.Material.Light.EditText">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">32sp</item><!--or 16sp-->
        <item name="android:typeface">serif</item>


    </style>

    <style name="btnButton" parent="android:Widget.Material.Light.Button">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_horizontal_margin</item>
        <item name="android:textSize">32sp</item>
        <item name="android:elevation">2dp</item>


    </style>

    <style name="spinnerDropDownItemStyle" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textSize">28sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/SpinnerItemText</item>
    </style>

    <style name="SpinnerItemText" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textSize">32sp</item>
        <item name="android:typeface">serif</item>
    </style>


    <style name="chkBox" parent="android:Widget.Material.Light.CompoundButton.CheckBox">
        <item name="android:textSize">32sp</item>
        <item name="android:textColorPrimaryDisableOnly">@color/white</item>


    </style>

    <style name="spinner" parent="@android:style/Widget.Material.Light.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">26sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/black</item>


    </style>

    <style name="spinnerItemStyle" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="BackgroundStyle" parent="android:Widget.Material.Light.ScrollView">
        <item name="android:padding">24dp</item>
    </style>

    <!-- Irfan Textview  -->
    <style name="i_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textview_heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Textview List  -->
    <style name="textview">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textview_fm_lst_h">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">35sp</item>
    </style>


    <!-- Irfan RadioGroup  -->
    <style name="i_radiogroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Irfan RadioButton  -->
    <style name="i_radiobutton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_weight">1</item>

    </style>


    <style name="i_checkbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="textInput" parent="android:Widget.Material.Light.EditText">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/et_style</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:padding">10dp</item>

    </style>

    <!-- EditText Acept Characters Starts. -->
    <style name="EditText">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:digits">abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@drawable/et_style</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:padding">10dp</item>
    </style>
    <!-- EditText Acept Number  Ends. -->

    <!-- EditText Acept Number  Starts. -->
    <style name="EditText_number" parent="android:Widget.Material.Light.EditText">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">number</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@drawable/et_style</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:padding">10dp</item>
    </style>
    <!-- EditText Acept Number  Ends. -->

    <!-- EditText Acept Number Decimal  Starts. -->
    <style name="EditText_number_de" parent="android:Widget.Material.Light.EditText">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@drawable/et_style</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- EditText Acept Date Black Box.-->
    <style name="EditText_number_b_box" parent="android:Widget.Material.Light.EditText">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@drawable/et_style</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:padding">10dp</item>
    </style>
    <!-- EditText Acept Number  Ends. -->

    <!--Card View Start-->
    <style name="cardView">
        <item name="android:background">@color/dullWhileOverlay</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <!--<item name="android:layout_marginRight">10dp</item>-->
        <!--<item name="android:layout_marginLeft">10dp</item>-->
        <item name="cardCornerRadius">7dp</item>
        <item name="cardElevation">3dp</item>
    </style>
    <!--Card View End-->

    <style name="radiobutton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="checkbox" parent="android:Widget.Material.Light.CompoundButton.CheckBox">
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:drawableRight">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">4dp</item>
    </style>


    <style name="linearlayout_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="linearlayout_view_wt_bound">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>


    <style name="i_scrollview">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5sp</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:fillViewport">true</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:paddingRight">5sp</item>
        <item name="android:paddingBottom">5sp</item>
    </style>

</resources>
